{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "linebreak-style": 0,
        "max-len": "off",
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "strict": "off",
        "require-yield": 0,
        "radix": "off",
        "func-names": "off",
        "prefer-destructuring": "off",
        "no-shadow": "off",
        "max-depth": [
            "warn",
            {
                "max": 3
            }
        ],
        "indent": [
            "warn",
            4
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "none",
                "caughtErrors": "all"
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "newline-per-chained-call": [
            "error",
            {
                "ignoreChainWithDepth": 6
            }
        ],
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id"
                ]
            }
        ]
    }
}